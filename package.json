{
  "name": "@opencx/widget",
  "private": false,
  "version": "3.0.84",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openchatai/widget"
  },
  "bugs": {
    "url": "https://github.com/openchatai/widget/issues"
  },
  "author": {
    "name": "openchatai",
    "url": "https://github.com/openchatai"
  },
  "scripts": {
    "clean": "rm -rf ./dist ./dist-embed",
    "clean:dist": "rm -rf ./dist ./dist-embed",
    "dev": "vite -c vite.config.ts --host",
    "build:lib": "vite build -c vite.config.ts",
    "build:embed": "vite build -c vite.embed.config.ts",
    "gen:sdk": "pnpm dlx openapi-typescript http://localhost:8080/widget-api-yaml -o ./src/headless/core/api/schema.ts && prettier --write ./src/headless/core/api/schema.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "cs": "changeset",
    "csv": "changeset version",
    "csp": "changeset publish",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "batman": "pnpm tsc && pnpm build:lib && pnpm build:embed",
    "prepublishOnly": "pnpm clean && pnpm test && pnpm batman",
    "test:browser": "vitest --workspace=vitest.workspace.ts"
  },
  "peerDependencies": {
    "@types/react": ">=18 <20",
    "@types/react-dom": ">=18 <20",
    "lucide-react": "^0.412.0",
    "react": ">=18 <20",
    "react-dom": ">=18 <20",
    "rehype-raw": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "clsx": "^2.1.1",
    "framer-motion": "^11.3.30",
    "lodash.isequal": "^4.5.0",
    "lucide-react": "^0.436.0",
    "openapi-fetch": "^0.13.4",
    "openapi-typescript": "^7.5.2",
    "react-dropzone": "^14.3.5",
    "tinycolor2": "^1.6.0",
    "uuid": "^11.0.4",
    "zod": "^3.23.8"
  },
  "files": [
    "dist",
    "dist-embed"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    },
    "./designs": {
      "types": "./dist/designs.d.ts",
      "import": "./dist/designs.js",
      "require": "./dist/designs.cjs"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^20.14.8",
    "@types/tinycolor2": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@uiw/react-iframe": "^1.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.0.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.41",
    "prettier": "^3.5.3",
    "react-markdown": "^9.0.1",
    "react-use": "^17.5.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.6",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-dts": "4.0.3",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^3.0.2"
  }
}
