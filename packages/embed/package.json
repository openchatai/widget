    "@types/react": ">=18 <20",
    "@types/react-dom": ">=18 <20",
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "devDependencies": {
    "@opencx/eslint-config": "workspace:*",
    "@opencx/tsconfig": "workspace:*"
